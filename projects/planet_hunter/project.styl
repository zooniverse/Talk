.planet-hunter-subject-viewer
  display inline
  canvas
    background black
  .graph-and-quarters
    display flex
  .lightcurve-viewer
    min-width 1088px
    max-height 500px
    height 445px
    margin-bottom 10px
    // display inline
    #tools
      text-align center
      color gray
      position relative
      top -421px
      left 1024px
      width 54px
      height 432px
      padding 5px
      background-color rgb(50,50,50)
      .tools-heading
        text-align center
        font-style italic
        font-size 14px
        font-weight light
      .tool-button
        display inline-block
        padding 5px
        margin 5px 0px 5px 0px
        text-align center
        font-size 11px
        opacity 0.5
        border none
        color white
        background-color rgb(50,50,50)
        height 60px
        width 100%
        border-radius 0.3em
        transition 0.3s
        outline none
        &:disabled
          opacity 0.15
        &:hover
          background-color #4C4C4C
          border-radius 0.3em
          opacity 1.0
        &.toggled
          background-color #151A1B
          transition 0.3s
        span
          top 20px
          position relative
          display inline-block
          margin-bottom 10px
        &.active
          transform translateY(1px)
          box-shadow none
        &#zoom-button
          background url("http://www.planethunters.org/images/icons/zoom-in.svg") no-repeat 50% 35%
          &.allowZoomOut
            background #151a1b url("http://www.planethunters.org/images/icons/zoom-out.svg") no-repeat 50% 35%
          &.zoomed
            background-color #151a1b
        &.toggle-fav
          background url("http://www.planethunters.org/images/icons/favorite-nofill.svg") no-repeat 50% 35%
          &.toggled
            background #151a1b url("http://www.planethunters.org/images/icons/favorite-filled.svg") no-repeat 50% 35%
        &#help
          background url("http://www.planethunters.org/images/icons/guide-icon.svg") no-repeat 50% 35%
        &#tutorial
          background url("http://www.planethunters.org/images/icons/tut-icon.svg") no-repeat 50% 35%

    #slider-container
      display -webkit-box
      height 24px
      width 1024px
      border 1px #585858 solid
      top -445px
      position relative
      // background rgba(13,21,24,0.75)
      background-color #000
      box-sizing border-box

      #ui-slider
        width 1026px
        height 24px
        position relative
        // float left
        display inline-block
        background none
        box-sizing border-box
        &.noUi-background
          border 1px solid #323232
        &.noUi-target
          border none
          box-shadow none
        .noUi-base
          width 790px
          margin-left 118px
        .noUi-handle
          text-align center
          border 1px solid #9a9ea2
          background rgba(137, 137, 137, .6)
          height 24px
          top -1px
          width 235px
          left -120px
          box-shadow none
          box-sizing border-box
          &:before
            color #9a9ea2
            background none
            content "III"
            line-height 24px
            height 20px
            left 0px
            top 0px
            position relative
            font-size 12px
            width 100%
            z-index 5
          &:after
            display none
          &:hover
            cursor -webkit-grab
            cursor grab
      #axis-label
        width 60px
        float left
        height 100%
        text-align center
        font-weight 700
        font-style italic
        font 12px
        background rgb(50,50,50)
      #numbers-container
        display inline
        position absolute
        background rgba(13,21,24,0.75)
        // width 954px
        width 1024px
        height 20px
        text-align justify
        display inline-table
        color #525c5b
        border 1px solid #323232
        span
          display table-cell
        
  .quarters-and-metadata
    box-sizing border-box
    padding 0 10px

    .quarters
      clearfix()
      margin 0 0 10px 0

    .quarter
      border-radius 2px
      float left
      margin 0 2px 0 0
      padding 3px 6px
      &:hover
        background #fff
        cursor pointer
      &.active
        background $blue
        color #fff
    .metadata
      display inline-block
      width 49%
      margin 0px
      padding 0px
    .links
      display inline-block
      width 49%
      margin 0px
      padding 0px

