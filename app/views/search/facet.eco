<% { capitalize } = require 'lib/util' %>

<div class="facet" data-facet-type="<%= @term %>">
  <input id="<%= @term %>-facet" type="checkbox" name="<%= @term %>" value="<%= @term %>" <%= 'checked' if @checked %>>
  <label for="<%= @term %>-facet"><%= capitalize @label %><em class="facet-count" data-count="<%= @count or 0 %>"></em></label>
</div>
