<% if @page is 1: %>
  <% for discussion in @boardFeatured: %>
    <% discussion.featured = true %>
    <%- require(../discussions/summary') discussion: discussion, followable: true %>
  <% end %>
<% end %>

<% for discussion in @discussions: %>
  <%- require(../discussions/summary') discussion: discussion, followable: true %>
<% end %>
