.mini-profile
  clearfix()
  
  .change-avatar
    float: left
    text-decoration: none
  
  .avatar
    float: left
    display: inline-block
    vertical-align: top
  
  .info
    float: left
    padding-left: 10px
    
    .name
      font-weight: bold
      font-size: 16px
  
  .user-moderation
    .show-for-privileged-user
      display: inline-block

.user.page
  .list
    clearfix()
  
  section.groups .list
    .group
      box-sizing: border-box
      display: inline-block
      padding: 10px 20px
      width: 49%
      vertical-align: top
      
      .comment
        .author
          color: gray
          margin-top: 10px
          
          a
            color: #333333
            
            &:hover
              text-decoration: none
          
          .role
            display: none
      
      .title a
        font-weight: bold
        color: inherit
      
      .subjects
        margin: 0 -5px
        overflow: hidden
        
        .subject
          box-sizing: border-box
          float: left
          padding: 0 5px
          width: 20%
          
          img
            width: 100%
  
  section.subjects
    .list
      overflow: hidden
    
    .subject
      box-sizing: border-box
      float: left
      padding: 0 30px 30px 0
      width: 50%
      
      .preview
        box-sizing: border-box
        float: left
        padding-right: 10px
        width: 33%
        
        a
          display: block
          
          img
            width: 100%
      
      .summary
        float: left
        width: 67%
        
        .title a
          color: inherit
          font-weight: bold
        
        .comment
          .author
            color: $gray
  
  section.boards .discussion-summary .stats
    display: none
  
  section.collections
    .collection
      box-sizing: border-box
      float: left
      padding: 0 30px 30px 0
      width: 50%
      
      .title a
        font-weight: bold
        color: inherit
      
      .subjects
        margin: 0 -5px
        overflow: hidden
        
        .subject
          box-sizing: border-box
          float: left
          padding: 0 5px
          width: 20%
          
          img
            width: 100%
      
      .comment .author
        color: gray
